<div id="post-id" data-post-id="<%= @post.try(:id) %>"></div>
<div id="user-id" data-user-id="<%= current_user.try(:id) %>"></div>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to 'Home', root_path %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to @post.user.email, user_posts_path(@post.user) %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to "Posts", user_posts_path(@post.user) %>
    </li>
    <li class="breadcrumb-item active" aria-current="page" id="post-title-breadcrumb">
      <%= @post.title %>
    </li>
  </ol>
</nav>
<div class="row mt-4">
		<div class="col-12">
				<div class="card text-center">
					<div class="card-header" id="post-header">
						<ul class="nav nav-pills card-header-pills">
							<li class="nav-item">
								<%= link_to 'Comments', post_comments_path(@post), class: "nav-link" %>
							</li>
							<% if @post.user.id == current_user.id %>  
								<li class="nav-item">
									<%= link_to 'Edit', edit_current_user_post_path(@post), :class => 'nav-link' %>
								</li>
								<li class="nav-item">
									<%= link_to 'Delete', current_user_post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, :class => 'nav-link'  %>
								</li>
							<% end %>
						</ul>
					</div>
					<div class="card-body">
						<h5 class="card-title" id="post-title">
							<%= @post.title %>
						</h5>
						<p class="card-text" id="post-description">
							<%= @post.description %>
						</p>
					</div>
				</div>
		</div>
</div>
