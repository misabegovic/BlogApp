<% if result.success? %>
  document.getElementById('notice').innerHTML = "<%= j render 'shared/success', action: :update %>";
	document.getElementById('comment_form').innerHTML= "<%= j render 'create_form', post: result.value.post %>";	
	document.getElementById("comment_row_<%= result.value.id %>").innerHTML = "<%= j render 'posts/comments/comment_row/data', comment: result.value, user: current_user %>"
<% else %>
	document.getElementById('notice').innerHTML = "<%= j render 'shared/fail', errors: result.errors %>";
<% end %>