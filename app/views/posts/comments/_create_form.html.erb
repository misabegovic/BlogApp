<div class="card text-center">
		<div class="card-header">
			Add a new comment
		</div>
		<div class="card-body">
			<%= form_for([ post, Comment.new ], remote: true) do |form| %>
				<div class="form-group mb-3">
						<%= form.text_area :description, class: 'form-control', placeholder: "Comment description" %>
				</div>
		
				<%= form.submit "Save", class: "btn btn-outline-primary btn-block", data: { disable_with: false } %>
			<% end %>
    </div>
</div>