<div class="card text-center">
    <div class="card-body">
        <%= form_with(model: [ post, Comment.new ], url: post_comments_path(post), method: :post, local: true) do |form| %>    
        
            <div class="form-group mb-3">
                <%= form.label "Add a new comment" %>
                <%= form.text_area :description, class: 'form-control', placeholder: "Comment description" %>
            </div>
        
            <%= form.submit "Save", class: "btn btn-outline-primary btn-block" %>
        <% end %>
    </div>
</div>