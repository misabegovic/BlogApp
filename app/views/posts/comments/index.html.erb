<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to 'Home', root_path %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to @post.user.email, user_posts_path(@post.user) %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to "Posts", user_posts_path(@post.user) %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to @post.title, post_path(@post) %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      Comments
    </li>
  </ol>
</nav>
<p id="notice"></p>
<div class="row mt-4">
	<div class="col-12" id="comment_form">
		<%= render 'create_form', post: @post %>              
	</div>      
</div>
<div class="row mt-4">
  <div class="col-12" id="comment_form">
		<%= render 'comments_table', comments: @comments, user: current_user %>
	</div>
</div>
