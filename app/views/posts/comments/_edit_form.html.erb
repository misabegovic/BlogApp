<div class="card text-center">
    <div class="card-body">
        <%= form_with(model: [ post, comment ], url: post_comment_path(post, comment), method: :patch, local: true) do |form| %>    
        
            <div class="form-group mb-3">
                <%= form.text_area :description, class: 'form-control', placeholder: "Comment description" %>
            </div>
        
            <%= form.submit "Update", class: "btn btn-outline-primary btn-block" %>
            <%= link_to 'Delete', post_comment_path(post, comment), method: :delete, data: {confirm: "Are you sure?"}, :class => 'btn btn-outline-primary btn-block'  %>
        <% end %>
    </div>
</div>